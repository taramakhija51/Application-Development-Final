 <!DOCTYPE html>
<html>
<p><%=@songs.is_a?(Array)%>
<p><%=@playlist_url%></p>
<p><%=@playlist_id%></p>
<p><img src=<%=@playlist.images.first.fetch("url")%>></p>
<img>
<style>

  body {
    font-family: trattatello;
    background-color: #FCF0CC;
    color: #5C7457;
  }

  h1 {
    font-size: 85px;
  }
  
  .gallery {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    max-width: 830px;
    margin: 0 auto;
  }

  .gallery>div {
    width: 200px;
    height: 200px;
    float: left;
    font-size: 25px;
    background-position: center;
    background-size: cover;
    opacity: 0;
  }

  .gallery>div:hover {
    visibility: visible;
    opacity: 1;
  }

  @media (max-width: 830px) {
    .gallery>div {
      width: calc(33vw - 10px);
      height: calc(33vw - 10px);
    }
  }
</style>

<h1><%=@playlist.name%></h1>
<p><%#=@songs%></p>
<%$song_array = []%>
  <%@songs.each do |s|%>
      <%$track_id = s.id%>
      <%@track_name = s.name%>
      <%@audio_features = s.audio_features%>
      <%@key = @audio_features.key%>
      <%@bpm = @audio_features.tempo%>
      <%@mode = @audio_features.mode%>
      <%@energy = @audio_features.energy%>
      <%@danceability = @audio_features.danceability%>
      <%@valence = @audio_features.valence%>
      <%@c = (7*@key + 3*@mode + 5) % 12%>
      <%if @c == 0%> 
        <%@c =+ 12%>
      <%else%>
        <%@c == @c%>
      <%end%>
      <%if @mode == 1%>
        <%@camelot_key = @c.to_s + "B"%>
      <%elsif @mode == 0%>
        <%@camelot_key = @c.to_s + "A"%>
      <%end%>
        <%$song = Hash.new%>
        <%$song.store(:track_id, $track_id) %>
        <%$song.store(:track_name, @track_name)%>
        <%$song.store(:track_camelot, @camelot_key)%>
        <%$song.store(:camelot_num, @c)%>
        <%$song.store(:mode, @mode)%>
        <%$song.store(:bpm, @bpm)%>
        <%$song.store(:energy, @energy)%>
        <%$song.store(:danceability, @danceability)%>
        <%$song.store(:valence, @valence)%>
        <%$song%>

        <%$song_array.push($song)%>
 
  <%end%>
    <%$song_array%>
    <%=$song_array.class%>
    <%$song_array_ordered = $song_array.sort_by{|song| [song[:camelot_num], (song[:camelot_num] + song[:mode])%2, song[:bpm]]}%>
    <%=$song_array_ordered%>

<table border="1">
    <tr>
      <td>Track Name</td>
      <td>Track Camelot Key</td>
      <td>Track BPM</td>
      <td>Show Details</td>
    </tr>     

  <%for $song in $song_array_ordered do%>
    <tr>
      <td>
        <%=$song.fetch(:track_name)%>
      </td>
      <td>
        <%=$song.fetch(:track_camelot)%>
      </td>
      <td>
        <%=$song.fetch(:bpm)%>
      </td>
      <td>
        <a href="/track_list/<%=$song.fetch(:track_id)%>" class="btn btn-block btn-outline-secondary">
        Show details
        </a>
      </td>
    </tr>     
  <%end%>
</table>
</html>
